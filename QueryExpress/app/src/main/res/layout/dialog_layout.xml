<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_root"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg_shape"
              android:orientation="vertical"
              android:padding="20dp">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
        <EditText
            android:id="@+id/order_edit"
            style="@style/btn_style"
            android:hint="请输入快递单号"
        />
        <ImageView
            android:id="@+id/sacn_img_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@mipmap/code"/>
    </RelativeLayout>

    <TextView style="@style/x_line_style"/>
    <RelativeLayout
        android:id="@+id/company_rl"
        android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
    <EditText
        android:id="@+id/company_edit"
        style="@style/btn_style"
        android:hint="请选择快递公司"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@mipmap/search_right"/>
    </RelativeLayout>

    <TextView style="@style/x_line_style"/>
    <EditText
        android:id="@+id/remark_edit"
        style="@style/btn_style"
        android:layout_marginTop="10dp"
        android:hint="备注（可选）"/>
    <TextView style="@style/x_line_style"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/cancel_btn"
            style="@style/my_no_btn"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="22dp"
            android:text="取消"/>
        <Button
            android:id="@+id/save_btn"
            style="@style/my_btn"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:text="保存"/>
    </RelativeLayout>

</LinearLayout>